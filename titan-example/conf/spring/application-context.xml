<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context.xsd">

  <context:annotation-config />

  <context:component-scan base-package="beans, controllers" />

  <context:property-placeholder location="mongodb.properties, titan.properties" />

  <bean id="titan-example.mongo-client" class="com.mongodb.MongoClient">
    <constructor-arg value="${titan-example.db-host}" />
    <constructor-arg value="${titan-example.db-port}" />
  </bean>

  <bean id="titan-example.titan-graph" class="me.tfeng.toolbox.titan.mongodb.TitanGraphFactory">
    <property name="dbName" value="${titan-example.db-name}"/>
    <property name="mongoClient" ref="titan-example.mongo-client"/>
    <property name="properties">
      <map>
        <entry key="ids.num-partitions">
          <value type="java.lang.Integer">${titan-example.ids.num-partitions}</value>
        </entry>
        <entry key="ids.authority.wait-time">
          <bean class="java.time.Duration" factory-method="ofMillis">
            <constructor-arg value="${titan-example.ids.authority.wait-time}"/>
          </bean>
        </entry>
      </map>
    </property>
  </bean>

</beans>
